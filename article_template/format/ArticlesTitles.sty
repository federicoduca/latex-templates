\newcommand*{\university}[1]{\gdef\@university{#1}}
\newcommand*{\career}[1]{\gdef\@career{#1}}
\newcommand*{\class}[1]{\gdef\@class{#1}}
\newcommand*{\subtitle}[1]{\gdef\@subtitle{#1}}

\renewcommand*{\maketitle}{{
    \thispagestyle{empty}
    \centering
    {\LARGE \bfseries \@title \par}
    \vspace{1ex}
    \ifdef{\@subtitle}{
            \vspace{-.5ex}
            {\Large \@subtitle} \par 
            \vspace{1ex}
        }{}
    {\large \bfseries \@class \par}
    {\large \@university \par}
    \vspace{-.8ex}
    {\large \@career \par}
    \vspace{.5ex}
    {\large \@author \par}
    \vspace{.5ex}
    \ifdef{\@date}
        {\@date \par}
        {}
    \bigskip
    \bigskip
    }
}

